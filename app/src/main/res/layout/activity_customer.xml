<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerActivity"
    >

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:itemBackground="@color/colorPrimary"
        app:itemIconTint="#FFFFFF"
        app:itemTextColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_navigation" />

    <FrameLayout
        android:id="@+id/frCarpentry"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277">

        <ImageView
            android:id="@+id/ivcarpentry"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/carpentry"></ImageView>

        <TextView
            android:id="@+id/tvcarpentry"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:text="Carpentry"
            android:textColor="#000000" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frElectrical"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/frCarpentry"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.277">

        <ImageView
            android:id="@+id/ivelectrical"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/electrical" />

        <TextView
            android:id="@+id/tvelectrical"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:text="Electrical"
            android:textColor="#000000" />

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frPlumbing"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frCarpentry"
        app:layout_constraintVertical_bias="0.123">

        <ImageView
            android:id="@+id/ivplumbing"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/plumbing" />

        <TextView
            android:id="@+id/tvplumbing"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:text="Plumbing"
            android:textColor="#000000" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frHomeAppliances"
        android:layout_width="120dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/frPlumbing"
        app:layout_constraintTop_toBottomOf="@+id/frElectrical"
        app:layout_constraintVertical_bias="0.124">

        <ImageView
            android:id="@+id/ivhomeappliances"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/homeappliances" />

        <TextView
            android:id="@+id/tvhomeappliances"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:text="Home Appliances"
            android:textColor="#000000"/>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/frPainting"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frPlumbing"
        app:layout_constraintVertical_bias="0.166">

        <ImageView
            android:id="@+id/ivpainting"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/painting" />

        <TextView
            android:id="@+id/tvpainting"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:text="Painting"
            android:textColor="#000000"/>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/frCleaning"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toEndOf="@+id/frPainting"
        app:layout_constraintTop_toBottomOf="@+id/frHomeAppliances"
        app:layout_constraintVertical_bias="0.166">

        <ImageView
            android:id="@+id/ivcleaning"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/cleaning2" />

        <TextView
            android:id="@+id/tvcleaning"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal|bottom"
            android:gravity="center"
            android:text="Cleaning"
            android:textColor="#000000" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvhouseholdservices"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="House-Hold Services"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.071"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.173" />

    <TextView
        android:id="@+id/tvlocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:text="Select Your Location"
        android:textSize="18sp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>